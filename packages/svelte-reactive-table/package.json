{
	"name": "svelte-reactive-table",
	"version": "0.6.0",
	"description": "A headless, fully reactive table library for Svelte applications",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build && npm run prepack",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"prepack": "svelte-kit sync && svelte-package && publint",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --config ../../.prettierrc --write .",
		"lint": "prettier --config ../../.prettierrc --check .",
		"test": "vitest run",
		"test:coverage": "vitest run --coverage",
		"test:unit": "vitest run",
		"typecheck": "svelte-check --tsconfig ./tsconfig.json",
		"size": "size-limit"
	},
	"author": {
		"name": "George Daskalakis",
		"email": "george.dask97@gmail.com",
		"url": "https://github.com/geodask"
	},
	"main": "dist/index.js",
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"sideEffects": false,
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"type": "module",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js",
			"default": "./dist/index.js"
		},
		"./package.json": "./package.json"
	},
	"publishConfig": {
		"access": "public"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/geodask/svelte-reactive-table.git"
	},
	"license": "MIT",
	"peerDependencies": {
		"svelte": "^5.0.0"
	},
	"devDependencies": {
		"@size-limit/preset-small-lib": "^11.2.0",
		"@sveltejs/adapter-auto": "^6.0.1",
		"@sveltejs/adapter-vercel": "^5.7.2",
		"@sveltejs/kit": "^2.21.3",
		"@sveltejs/package": "^2.3.11",
		"@sveltejs/vite-plugin-svelte": "^5.1.0",
		"@tailwindcss/vite": "^4.1.8",
		"@testing-library/jest-dom": "^6.6.3",
		"@testing-library/svelte": "^5.2.8",
		"@vitest/coverage-v8": "3.2.2",
		"jsdom": "^26.1.0",
		"publint": "^0.3.12",
		"size-limit": "^11.2.0",
		"svelte": "^5.33.18",
		"svelte-check": "^4.2.1",
		"tailwindcss": "^4.1.8",
		"typescript": "^5.8.3",
		"vite": "^6.3.5",
		"vitest": "^3.2.2"
	},
	"size-limit": [
		{
			"path": "dist/index.js",
			"limit": "10 KB"
		}
	],
	"keywords": [
		"svelte",
		"table",
		"reactive",
		"headless",
		"ui",
		"component"
	]
}
